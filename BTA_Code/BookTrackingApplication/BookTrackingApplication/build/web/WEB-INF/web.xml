<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <servlet-class>activity.UserRegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserValidationServlet</servlet-name>
        <servlet-class>activity.UserValidationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignmentsStoreServlet</servlet-name>
        <servlet-class>activity.AssignmentsStoreServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignmentsGradingServlet</servlet-name>
        <servlet-class>activity.AssignmentsGradingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GBAPI</servlet-name>
        <servlet-class>activity.GBAPI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <url-pattern>/UserRegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserValidationServlet</servlet-name>
        <url-pattern>/UserValidationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignmentsStoreServlet</servlet-name>
        <url-pattern>/AssignmentsStoreServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignmentsGradingServlet</servlet-name>
        <url-pattern>/AssignmentsGradingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GBAPI</servlet-name>
        <url-pattern>/GBAPI</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
